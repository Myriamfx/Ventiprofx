# ============================================================
# VentiPro - Variables de Entorno para Producción
# ============================================================
# Copiar este archivo como .env.production y rellenar los valores
# cp .env.production.example .env.production
# ============================================================

# Base de datos (MySQL/TiDB)
DATABASE_URL=mysql://user:password@host:3306/ventipro

# Seguridad
JWT_SECRET=tu-secreto-jwt-seguro-aqui-min-32-caracteres

# OAuth (Manus)
VITE_APP_ID=tu-app-id
OAUTH_SERVER_URL=https://api.manus.im
VITE_OAUTH_PORTAL_URL=https://manus.im/login

# Propietario
OWNER_OPEN_ID=tu-open-id
OWNER_NAME=Tu Nombre

# APIs internas
BUILT_IN_FORGE_API_URL=https://api.manus.im
BUILT_IN_FORGE_API_KEY=tu-api-key
VITE_FRONTEND_FORGE_API_KEY=tu-frontend-api-key
VITE_FRONTEND_FORGE_API_URL=https://api.manus.im

# Aplicación
VITE_APP_TITLE=VentiPro
VITE_APP_LOGO=
NODE_ENV=production
PORT=3000
