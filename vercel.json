{
  "version": 3,
  "name": "ventipro",
  "builds": [
    { "src": "package.json", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/_core/index.ts" },
    { "src": "/(.*)", "dest": "/client/dist/$1" }
  ],
  "installCommand": "pnpm install",
  "buildCommand": "pnpm build"
}